  },
  "homepage": "https://github.com/faridulreza/nestjs-swagger-splitter#readme",
  "peerDependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/swagger": "^7.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.8.9",
